@{
    ViewBag.Title = "Home Page";
}

@if (TempData["LoginSuccess"] != null)
{
    <script>
        alert('@TempData["LoginSuccess"]');
    </script>
}

<style>
    .list-unstyled li {
        margin-bottom: 1rem; /* Adjusts the spacing; equivalent to <br/> */
    }
</style>

<div class="container-fluid mt-4">
    <div class="row">
        <!-- Left Sidebar - Summaries -->
        <div class="col-md-2">
            <div class="shadow-sm p-3 mb-5 bg-body-tertiary rounded">
                <h4>Summaries</h4>
                <ul class="list-unstyled brand-links">
                    <li><a href="@Url.Action("NewStocks", "Summeries")">New stocks</a></li>
                    <li><a href="@Url.Action("ListedForSale", "Summeries")">Listed for sale</a></li>
                    <li><a href="@Url.Action("TotalSold", "Summeries")">Total sold</a></li>
                    <li><a href="@Url.Action("SalesPerBrand", "Summeries")">Sales per brand</a></li>
                    <li><a href="@Url.Action("ListingsPerBrand", "Summeries")">Listings total</a></li>
                    <li><a href="@Url.Action("AverageSalePerBrand", "Summeries")">Average sales per brand</a></li>
                    <li><a href="@Url.Action("TotalsPerBrandCategory", "Summeries")">Totals per brand</a></li>
                    <li><a href="@Url.Action("TotalsPerStore", "Summeries")">Totals by stores</a></li>
                </ul>
            </div>
        </div>

        <!-- Main Content - Image and Text -->
        <div class="col-md-7">
            <!-- Display the original carousel and content if no search results -->
            <div class="img-fluid">
                <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/Content/Images/Hero Cycles - Store Identity.jpeg" class="d-block w-100 img-fluid" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Content/Images/Tochka Design Studio Channels Nightclubs for Cycling Studios in Russia - Interior Design (1).jpeg" class="d-block w-100 img-fluid" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Content/Images/05985503-7c88-4500-b6ae-270fd8b52b61.jpeg" class="d-block w-100 img-fluid" alt="...">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <div class="shadow-sm p-3 mb-5 bg-body-tertiary rounded mt-3 text-center">
                <h4>We help your dreams come true!!</h4>
                <p>We help you sell, and help you buy!!</p>
                <p>We connect you to the global bicycle market!!</p>
            </div>
            }
        </div>

        <style>
            .brand-links a {
                text-decoration: none;
                color: inherit; /* Inherit the color from the surrounding text */
                font-size: 16px;
                border-bottom: solid;
                border-bottom-color: white;
            }

                .brand-links a:hover {
                    transform: scale(1.6); /* Zoom in slightly on hover */
                    border-bottom-color: black;
                }
        </style>
        <!-- Right Sidebar - Bike Brands and Shops Globally -->
        <div class="col-md-3">
            <div class="shadow-sm p-3 mb-5 bg-body-tertiary rounded mb-3">
                @*<a href="@Url.Action("InsertImages", "Brands")">
                        <h4>Bike Brands</h4>
                    </a>*@
                <h4>Bike Brands</h4>

                <ul class="list-unstyled brand-links">
                    <li><a href="@Url.Action("BrandProducts", "Brands", new { brandId = 1 })">Electra</a></li>
                    <li><a href="@Url.Action("BrandProducts", "Brands", new { brandId = 2 })">Haro</a></li>
                    <li><a href="@Url.Action("BrandProducts", "Brands", new { brandId = 3 })">Heller</a></li>
                    <li><a href="@Url.Action("BrandProducts", "Brands", new { brandId = 4 })">Trek</a></li>
                    <li><a href="@Url.Action("BrandProducts", "Brands", new { brandId = 5 })">Pure Cycles</a></li>
                    <li><a href="@Url.Action("BrandProducts", "Brands", new { brandId = 6 })">Ritchey</a></li>
                    <li><a href="@Url.Action("BrandProducts", "Brands", new { brandId = 7 })">Sun bicycles</a></li>
                    <li><a href="@Url.Action("BrandProducts", "Brands", new { brandId = 8 })">Surly</a></li>
                    <li><a href="@Url.Action("BrandProducts", "Brands", new { brandId = 9 })">Strider</a></li>
                </ul>


            </div>
            <div class="shadow-sm p-3 mb-5 bg-body-tertiary rounded">
                <h4>Our shops globally</h4>
                <ul class="list-unstyled brand-links">
                    <li><a href="@Url.Action("ShopGlobally", "Brands", new { storeid = 2 })">United States of America</a></li>
                    <li><a href="@Url.Action("ShopGlobally", "Brands", new { storeid = 1 })">United Kingdom</a></li>
                    <li><a href="@Url.Action("ShopGlobally", "Brands", new { storeid = 3 })">South Africa</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

